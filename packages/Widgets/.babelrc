{
    "presets": [
        ["@babel/preset-typescript"],
        ["@babel/preset-env", {
            "targets": {
                "browsers": "defaults and supports webgl2"
            },
            "modules": false
        }]
    ],
    "plugins": [
        ["module-resolver", {
            "cwd": "packagejson",
            "root": ["./src"],
            "extensions": [".js", ".ts", ".tsx"]
        }],
        ["module-extension-resolver", {
            "srcExtensions": [".ts", ".js"]
        }],
        ["@babel/plugin-transform-runtime", {
            "regenerator": false
        }]
    ]
}
